<!doctype html>
<html lang="ru">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>{{ title }} — {{ to_name }}</title>
  <link rel="stylesheet" href="{{ base_url }}/static/style.css" />
</head>

<body class="theme-{{ theme|default('snow') }}">
  <div class="wrap">
    <header class="card hero">
      {% if hero_image_url %}
      <div class="hero-img" style="background-image:url('{{ hero_image_url }}')"></div>
      {% endif %}
      <div class="hero-content">
        <div class="badge">QR-поздравление</div>
        <h1>{{ title }}</h1>
        <h2 class="to">{{ to_name }}</h2>
        <p class="msg">{{ message }}</p>
        {% if from_name %}
        <p class="from">— {{ from_name }}</p>
        {% endif %}

        <div class="actions">
          {% if music_url %}
          <button class="btn" id="musicBtn" data-music="{{ music_url }}">▶ Включить музыку</button>
          {% endif %}
          <button class="btn ghost" id="shareBtn">Поделиться</button>
        </div>
      </div>
    </header>

    {% if video_url %}
    <section class="card">
      <h3>Видео</h3>
      {% if video_type == "youtube" %}
        <div class="video">
          <iframe
            src="{{ youtube_embed_url }}"
            title="Поздравление"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen></iframe>
        </div>
      {% else %}
        <div class="video">
          <video controls playsinline preload="metadata">
            <source src="{{ video_url }}" type="video/mp4">
            Ваш браузер не поддерживает видео.
          </video>
        </div>
      {% endif %}
    </section>
    {% endif %}

    {% if gallery_urls and gallery_urls|length > 0 %}
    <section class="card">
      <h3>Фото</h3>
      <div class="grid">
        {% for url in gallery_urls %}
        <a class="ph" href="{{ url }}" target="_blank" rel="noopener">
          <img src="{{ url }}" alt="photo {{ loop.index }}" loading="lazy" />
        </a>
        {% endfor %}
      </div>
    </section>
    {% endif %}

    <footer class="footer">
      <div class="small">Сделано с ❤️ · <span id="year"></span></div>
    </footer>
  </div>

  <audio id="bgMusic" preload="none"></audio>
  <script src="{{ base_url }}/static/page.js"></script>
</body>
</html>
